@model List<BookStore.Models.ViewModels.GenreViewModel>
@{
    ViewData["Title"] = "Список жанров";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h1>Список жанров</h1>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-3">
                <a class="btn btn-primary" asp-controller="AdminGenre" asp-action="Create">Добавить жанр</a>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                @if (Model.Count == 0)
                {
                    <p>Список жанров пуст</p>
                }
                else
                {
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>№</th>
                                <th>Название</th>
                                <th>Дата создания</th>
                                <th>Дата изменения</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Select((value, index) => new { index, value }))
                            {
                                <tr>
                                    <td>@item.index</td>
                                    <td>@item.value.Name</td>
                                    <td>@item.value.CreatedDate</td>
                                    <td>@item.value.ModifiedDate</td>
                                    <td>
                                        <a class="btn btn-dark" asp-controller="AdminGenre" asp-action="Update" asp-route-Id="@item.value.Id">
                                            <svg class="nav-icon">
                                                <use xlink:href="/js/admin/vendors/@@coreui/icons/svg/free.svg#cil-pencil"></use>
                                            </svg>
                                        </a>
                                        <form asp-controller="AdminGenre" asp-action="Delete" asp-route-Id="@item.value.Id" method="post">
                                            <button class="btn btn-danger" type="submit">
                                                <svg class="nav-icon">
                                                    <use xlink:href="/js/admin/vendors/@@coreui/icons/svg/free.svg#cil-trash"></use>
                                                </svg>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>

